<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="应用">
        <Preference
            android:key="app_version"
            android:title="当前版本"
            app:icon="@drawable/ic_app_setting_app_version" />
    </PreferenceCategory>

    <PreferenceCategory android:title="设置">

        <SwitchPreference
            android:key="backup_domain_enable"
            android:summary="无法使用弹弹网络相关服务时，可尝试打开此配置"
            android:title="备用服务器"
            app:icon="@drawable/ic_language" />

        <EditTextPreference
            android:key="backup_domain_address"
            android:title="备用服务器地址"
            app:icon="@drawable/ic_domain_url" />

        <SwitchPreference
            android:key="hide_file"
            android:summary="在选择文件时，显示系统隐藏文件"
            android:title="显示隐藏文件"
            app:icon="@drawable/ic_app_setting_hide_file" />

        <SwitchPreference
            android:key="splash_page"
            android:title="展示APP启动页"
            app:icon="@drawable/ic_app_setting_splash" />

        <Preference
            android:key="dark_mode"
            android:title="深色模式"
            app:icon="@drawable/ic_dark_mode_system" />
    </PreferenceCategory>

    <PreferenceCategory android:title="更新设置">

        <Preference
            android:key="download_beta_package"
            android:title="下载最新的beta包"
            android:summary="下载最新的测试版本安装包"
            app:icon="@drawable/ic_app_setting_beta" />

        <Preference
            android:key="download_release_package"
            android:title="下载最新的release包"
            android:summary="下载最新的正式版本安装包"
            app:icon="@drawable/ic_app_setting_update" />
        
        <SwitchPreference
            android:key="enable_github_proxy"
            android:title="GitHub下载加速"
            android:summary="使用镜像代理加速GitHub Release下载"
            app:icon="@drawable/ic_app_setting_auto_update" />

        <Preference
            android:key="latest_package_info"
            android:title="最新包信息"
            android:summary="最新包的名字，比如弹弹play概念版 v4.1.3 Beta (2ae3833)"
            android:selectable="false" />

    </PreferenceCategory>


    <PreferenceCategory android:title="其它">
        <Preference
            android:key="license"
            android:title="开源许可协议"
            app:icon="@drawable/ic_app_setting_license" />
        <Preference
            android:key="about_us"
            android:title="关于我们"
            app:icon="@drawable/ic_app_setting_about_us" />
    </PreferenceCategory>
</PreferenceScreen>