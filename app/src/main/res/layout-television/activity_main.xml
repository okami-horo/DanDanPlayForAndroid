<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.xyoye.dandanplay.ui.main.MainViewModel" />

        <variable
            name="viewModel"
            type="com.xyoye.dandanplay.ui.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity">

        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/layout_toolbar" />

        <!-- TV端左侧导航菜单 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tv_navigation_container"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:background="@color/item_bg_color"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tv_navigation_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:clipToPadding="false"
                android:focusable="true"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 主内容区域 -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_navigation_container"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout" />

        <!-- 保留原有的底部导航，但设置为不可见，用于兼容性 -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation_view"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/item_bg_color"
            android:focusable="false"
            android:visibility="gone"
            app:elevation="5dp"
            app:itemIconTint="@drawable/selector_main_bottom_navigation"
            app:itemTextColor="@drawable/selector_main_bottom_navigation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/main_bottom_navigation" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
